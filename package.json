    "**/*": "prettier --write --ignore-unknown",
    "frontend/**/*.js": "webpack"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "node": "^21.2.0",
    "node-pg-migrate": "^6.2.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "pg-promise": "^11.5.4",
    "prettier": "^3.0.3",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
