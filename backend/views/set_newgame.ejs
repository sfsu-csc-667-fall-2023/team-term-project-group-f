<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Set Up New Game</title>
  <link rel="stylesheet" href="/styles/pico.css" />
  <link rel="stylesheet" href="/styles/chat.css" />
  <style>
    main {
      position: fixed;
      display: flex;
      height: 100vh;
    }

    nav {
      top: 0;
      left: 0;
      width: 40%;
      height: 6%;
      padding: 10px;
      margin-left: auto;
    }

    /* nav.container {
      display: flex;
      justify-content: space-between;
      background-color: #333;
      color: white;
      padding: 10px;
    } */

    .logout {
      list-style: none;
      margin-bottom: 0;
      padding: 0;
    }

    .game-set {
      width: 70%;
      height: 100%;
      background: url('./background.jpg') center/cover no-repeat;
      text-align: center;
    }

    .container {
      margin-top: 60px;
      width: 80%;
      max-width: 500px;
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      text-align: center;

    }

    .select-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .num-select,
    .player-select {
      display: flex;
      align-items: center;
    }


    .chat-set {
      position: relative;
      width: 30%;
      height: 100%;
      background-color: black;
      text-align: center;
    }

    article {
      width: 90%;
      height: 65%;
      overflow-y: auto;
      margin: 0 20px;
      padding: 20px;
    }

    .message-nav {
      width: 95%;
      margin: 10px;
      display: flex;
      align-items: center;
    }

    input[name="message"] {
      width: 800px;
      flex: 1;
      margin: 10px;
    }

    .send-button {
      width: 40%;
      max-width: 90px;
      color: #24333e;
      margin: 10px;
      border: none;
      cursor: pointer;
    }

    .button-options {
      width: 80%;
      max-width: 500px;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin: auto;
    }

    .button-options button {
      background-color: white;
      color: black;
      margin: 10px 0;
    }

    .avatar-container {
      margin-top: 20px;
    }

    .avatar {
      width: 200px;
      height: 200px;
      border-radius: 50%;
      object-fit: cover;
    }
    #overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(0, 0, 0, 0.5); /* Black with opacity */
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .dialog {
      background-color: white;
      padding: 20px;
      border-radius: 5px;
      text-align: center;
    }
    
    #overlay.hide {
      display: none;
    }
    
    #overlay.show {
      display: flex;
      /* ... other styles ... */
    }
  </style>
</head>

<body>
  <main>
    <div class="game-set">
      <div class="container">
        <div class="avatar-container">
          <img src="../set-newgame-avt.gif" alt="Avatar" class="avatar">
        </div>
        <form method="POST">  <!-- POST to set_newgame route  -->
          <div class="select-container">
            <div class="num-select">
              <select name="playerCount" id="playerCount" required>
                <option value="">Select number of player(s)</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select>
            </div>

            <div class="player-select">
              <select name="playerType" id="playerType" required>
                <option value="">Select your player(s)</option>
                <option value="1">Computer</option>
                <option value="2">Your friends</option>
                <option value="2">Random people</option>
              </select>
            </div>
          </div>

          <div class="button-options">
            <button type="submit">START GAME</button>
            <button type="submit"><a href="/">Exit</a></button>
          </div>
        </form>
      </div>
    </div>

    <div id="overlay" class="<%= query.noRoomAvailable ? 'show' : 'hide' %>"> <!-- if no empty rooms available, display this overlay -->
      <div class="dialog">
        <p>No empty rooms available. Please join an existing room.</p>
        <button onclick="href='/lobby'">Press to return to main lobby</button>
      </div>
    </div>


    <div class="chat-set">
      <form action="/logout?_method=DELETE" method="POST">
        <nav>
          <button class="logout">Logout</button>
        </nav>
      </form>

      <h2>Lobby Chat</h2>
      <article>
        <div class="message not-me">
          <img src="https://placehold.co/50x50?text=PP" alt="Avatar" />
          <p>Hello!!<br /> Oh wait me a second...</p>
        </div>
        <div class="message not-me">
          <img src="https://placehold.co/50x50?text=SM" alt="Avatar" />
          <p>Hey! I'm good. How many people joining toight?</p>
        </div>
        <div class="message me">
          <img src="https://placehold.co/50x50?text=HA" alt="Avatar" />
          <p>Hello guys!<br /> How're you guys doing?</p>
        </div>
        <div class="message not-me">
          <img src="https://placehold.co/50x50?text=AP" alt="Avatar" />
          <p>Hi Hoang-Anh, I'm good! <br />How're you doing?</p>
        </div>
      </article>

      <div class="message-nav">
        <input type="text" name="message" id="message" placeholder="Message..." />
        <!-- <button type="submit" class="send-button">Send</button> -->
        <input type="image" src="../send-button.png" alt="Submit" name="message" />
      </div>
    </div>
  </main>
</body>

</html>