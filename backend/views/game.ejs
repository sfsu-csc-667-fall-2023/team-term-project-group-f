<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Game <%= id %></title>
  <link rel="stylesheet" href="/styles/pico.css" />
  <link rel="stylesheet" href="/styles/chat.css" />
  <link rel="stylesheet" href="/styles/landing.css" />
  <style>
    main {
      position: fixed;
      display: flex;
      height: 100vh;
    }

    nav {
      top: 0;
      left: 0;
      width: 100%;
      height: 6%;
      padding: 10px;
    }

    .logout {
      list-style: none;
      margin-left: auto;
      width: auto;
      padding: 0;
    }

    .play-area {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
      height: 15%;
    }

    .buttons-container {
      display: flex;
      gap: 10px;
    }

    .centered-image {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 60%;
    }

    .centered-image img {
      max-width: 50%;
      max-height: 50%;
      animation: rotateAnimation 10s linear infinite;
    }

    @keyframes rotateAnimation {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }

    button {
      background-color: black;
      color: white;
      width: 50%;
    }

    .my-area {
      display: flex;
      width: 90%;
      height: 25%;
      padding: 10px;
      margin: auto;
      justify-content: center;
      align-items: center;
      box-sizing: border-box;
    }

    .mycard-button {
      cursor: pointer;
      margin: 10px;
    }

    .game-set {
      width: 70%;
      height: 100%;
    }

    .container {
      margin-top: 60px;
      width: 80%;
      max-width: 500px;
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      text-align: center;

    }

    .chat-set {
      position: relative;
      width: 30%;
      height: 100%;
      background-color: black;
      text-align: center;
    }
    .game-set {
    width: 70%;
    height: 100%;
    background: none;

    text-align: center;
}

    article {
      width: 90%;
      height: 70%;
      overflow-y: auto;
      margin: 0 20px;
      padding: 20px;
    }

    .message-nav {
      width: 95%;
      margin: 10px;
      display: flex;
      align-items: center;
    }

    input[name="message"] {
      width: 800px;
      flex: 1;
      margin: 10px;
    }

    .send-button {
      width: 40%;
      max-width: 90px;
      color: #24333e;
      margin: 10px;
      border: none;
      cursor: pointer;
    }

    .button-options {
      width: 80%;
      max-width: 500px;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin: auto;
    }

    .button-options button {
      background-color: white;
      color: black;
      margin: 10px 0;
    }

    .avatar-container {
      margin-top: 20px;
    }

    .avatar {
      width: 200px;
      height: 200px;
      border-radius: 50%;
      object-fit: cover;
    }

    /* temporary text display css*/
    .card {
      
      border: 1px solid #000;
      padding: 10px;
      margin: 5px;
      text-align: center;
      background-color: #fff;
    }
  </style>
</head>

<body>
  <main>
    <div class="game-set">
      <div class="play-area">
        <p>Current turn: <%= currentPlayer.username %></p>
        <div class="buttons-container">
          <form action="/game/<%= id %>/draw" method="POST">
            <button type="submit">Draw</button>
          </form>
          <button>Skip</button>
          <button>Say Uno !!!</button>
        </div>
      </div>

      <div class="centered-image">
        <% if (lastCard) { %>
          <!-- <img src="<%= lastCard.imagePath %>" alt="Last Played Card"> implement later -->
          <p><%= lastCard.suit %> - <%= lastCard.value %></p>
        <% } else { %>
          <p>No cards played yet.</p>
        <% } %>
      </div>               <!-- replace imagepath with original path, created a condition to check if first card is played or not -->

      <div class="my-area">
        <% myCards.forEach(card => { %>
          <!-- <img src="<%= card.imagePath %>" alt="Card" class="mycard-button" />  implement when card images are ready-->
          <div class="card">
            <%= card.suit %> - <%= card.value %>
            <form action="/game/playCard" method="post">
              <input type="hidden" name="suit" value=<%= card.suit %>>
              <input type="hidden" name="value" value=<%= card.value %>>
              <input type="hidden" name="gameId" value=<%= id %>>
              <input type="hidden" name="card_id" value=<%= card.card_id %>>
          
              <!-- Submit button to trigger the POST request -->
              <button type="submit">Play Card</button>
          </form>
          </div>
        <% }) %>
        <!-- <img src="../red-0.png" alt="Button 1" class="mycard-button" />
        <img src="../green-null.png" alt="Button 2" class="mycard-button" />
        <img src="../yellow-reverse.png" alt="Button 3" class="mycard-button" />
        <img src="../yellow-3.png" alt="Button 4" class="mycard-button" /> -->
      </div>
    </div>

    <div class="chat-set">
      <nav>
        <div class="exit"><a href="/">Exit Game</a></div>
        <form action="/sign_in" method="POST">
            <button class="logout">Logout</button>
        </form>
      </nav>

      <h2>Game <%= id %></h2>
      <%- include('chat', { roomId: 0 }) %>
    </div>
    <script>
      function exit() {
        // Redirect to the specified URL ("/") or perform any other action
        window.location.href = "/";
      }      
    </script>


  </main>
  
</body>

</html>